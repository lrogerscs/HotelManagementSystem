<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0"
	prefWidth="1600.0" styleClass="base-pane"
	stylesheets="@../css/application.css"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.controller.HotelController">
	<children>
		<!-- Banner -->
		<VBox prefHeight="150.0" prefWidth="1600.0"
			styleClass="banner-pane" />
		
		<!-- Hotel Amenities Section -->
		<VBox prefHeight="200.0" prefWidth="100.0" styleClass="text-pane">
			<children>
				<Label text="Hotel Amenities" />
			</children>
		</VBox>
		<VBox fx:id="amenitiesPanelPane" prefHeight="100.0"
			prefWidth="1600.0" styleClass="display-pane" />
		
		<!-- Rooms Section -->
		<VBox prefHeight="200.0" prefWidth="100.0" styleClass="text-pane">
			<children>
				<Label text="Rooms" />
			</children>
		</VBox>
		<VBox fx:id="roomPanelPane" prefHeight="200.0" prefWidth="100.0"
			spacing="10.0" styleClass="display-pane"
			stylesheets="@../css/application.css" />
		
		<!-- Employees Section -->
		<VBox prefHeight="200.0" prefWidth="100.0" styleClass="text-pane">
			<children>
				<Label text="Employees" />
			</children>
		</VBox>
		<VBox fx:id="employeePanelPane" prefHeight="200.0" prefWidth="100.0"
			spacing="10.0" styleClass="display-pane"
			stylesheets="@../css/application.css" />
		
		<!-- Back Button -->
		<VBox prefHeight="50.0" prefWidth="1600.0"
			styleClass="bottom-pane">
			<children>
				<Button mnemonicParsing="false" onAction="#onBackButtonClick"
					text="Back" />
			</children>
		</VBox>
	</children>
</VBox>
